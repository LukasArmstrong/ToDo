@model ToDo.Models.Task

@{
    ViewBag.Title = "Task Detail";
}

@Html.Partial("_Message")

<h2>@Model.DisplayText</h2>

<h3>Main Information</h3>

<div class="row">
    <div class="col-md-6">

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.SeriesId)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model?List?Title <!-- Temp fix I guess -->
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.OrderNumber)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.OrderNumber
            </div>
        </div>

        <div class="row">
            <div class="col-xs-4 col-sm-4">
                @Html.LabelFor(m => m.CompletedOn)
            </div>
            <div class="col-xs-8 col-sm-8">
                @Model.CompletedOn.ToShortDateString()
            </div>
        </div>

    </div>
    <div class="col-md-6">

        <div>
            @Html.LabelFor(m => m.Description)
        </div>
        <div>
            @(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "N/A")
        </div>

    </div>
</div>

<div class="pad-top">
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-primary btn-lg margin-right">
        <span class="glyphicon glyphicon-edit"></span> Edit
    </a>
    <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger btn-lg margin-right">
        <span class="glyphicon glyphicon-trash"></span> Delete
    </a>
    <a href="@Url.Action("Index")" class="btn btn-default btn-lg">
        <span class="glyphicon glyphicon-step-backward"></span> Back
    </a>
</div>

