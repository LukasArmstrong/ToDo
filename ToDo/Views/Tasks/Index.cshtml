@model List<ToDo.Models.Task>

@{
    ViewBag.Title = "To Do List";
}

@Html.Partial("_Message")

<h2>@ViewBag.Title</h2>

<div class="pull-right">
    <a href="@Url.Action("Add")" class="btn btn-primary btn-lg">
        <span class="glyphicon glyphicon-plus"></span> Add Task
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Task</th>
            <th>Completed On</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.DisplayText</td>
                <td>@task.CompletedOn.ToString("MM/dd/yyyy")</td>
                <td>
                    <div class="pull-right">
                        <a href="@Url.Action("Detail", new { id = task.Id })" class="btn btn-primary btn-xs margin-right">
                            <span class="glyphicon glyphicon-info-sign"></span><span class="hidden-xs"> Detail</span>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
